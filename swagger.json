{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "walmart",
    "description": "microservicio de usuarios",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "{protocol}://localhost:5000/",
      "variables": {
        "protocol": {
          "enum": [
            "http",
            "https"
          ],
          "default": "http"
        }
      }
    },
    {
      "url": "{protocol}://walmart.com/",
      "variables": {
        "protocol": {
          "enum": [
            "http",
            "https"
          ],
          "default": "https"
        }
      }
    }
  ],
  "components": {
    "schemas": {
      "ResponseProductos": {
        "type": "object",
        "required": [
          "ok"
        ],
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "response": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              },
              "id": {
                "type": "number"
              },
              "brand": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "image": {
                "type": "string"
              },
              "price": {
                "type": "number"
              }
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean"
          },
          "error": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/productos/": {
      "get": {
        "tags": [
          "Productos"
        ],
        "summary": "ver productos",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseProductos"
                }
              }
            }
          },
          "500": {
            "description": "NOK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
}